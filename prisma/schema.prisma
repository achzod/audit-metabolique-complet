// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?   // Nullable for passwordless magic link auth
  name          String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  audits        Audit[]
  payments      Payment[]
  magicTokens   MagicToken[]

  @@map("users")
}

model Audit {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  type           String   // "GRATUIT" ou "PREMIUM"
  status         String   @default("PENDING") // "PENDING", "PROCESSING", "COMPLETED", "ERROR"

  // Données du questionnaire (JSON)
  responses      Json

  // Photos téléchargées (URLs ou base64)
  photoFace      String?  @db.Text
  photoBack      String?  @db.Text
  photoSide      String?  @db.Text

  // Résultats de l'audit (HTML généré par Claude)
  htmlContent    String?  @db.Text

  // Métadonnées
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  completedAt    DateTime?

  payment        Payment?

  @@map("audits")
}

model Payment {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  auditId         String   @unique
  audit           Audit    @relation(fields: [auditId], references: [id], onDelete: Cascade)

  amount          Float    // 79.00 pour premium
  currency        String   @default("EUR")

  provider        String   // "STRIPE" ou "PAYPAL"
  providerPaymentId String? // ID de transaction du provider

  status          String   @default("PENDING") // "PENDING", "COMPLETED", "FAILED", "REFUNDED"

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  paidAt          DateTime?

  @@map("payments")
}

model MagicToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@index([token])
  @@index([expiresAt])
  @@map("magic_tokens")
}
